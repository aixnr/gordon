# -------------------------------------------------
# Gordon configuration – copy this to config.env
# -------------------------------------------------
# Model that will be used for chat completions
GORDON_MODEL_CHAT=gpt-oss-20b

# Model that will be used for embeddings
GORDON_MODEL_EMBEDDING=text-embedding-mxbai-embed-large-v1

# Where the local LLM server (e.g. LM‑Studio) is listening
GORDON_MODEL_ENDPOINT=http://127.0.0.1:1234/v1

# API‑key for the endpoint (dummy by default)
GORDON_API_KEY=dummy-key

# Crawl depth for `ingest-web` – 0 means “no crawling”
GORDON_CRAWL_DEPTH=0
